<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             mc:Ignorable="d"
             x:Class="CallJSFromXamarin.MainPage">
    <ScrollView>
        <StackLayout x:Name="stack" Margin="10">
                <Label Text="Corticon.js Xamarin Integration Demo " Font="Bold,22" HorizontalOptions="Fill" VerticalTextAlignment="Center"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="str1: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="str1"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="str2: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="str2"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="dec1: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="dec1"
                       Keyboard="Numeric"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="dec2: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="dec2"
                       Keyboard="Numeric"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Date: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="date1"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Days: "
                       VerticalTextAlignment="Center"/>
                <Entry x:Name="days"
                       Keyboard="Numeric"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <!--
            -->
            <Button x:Name="callService"
                    Text="Call service"
                    Clicked="MultiplyBtnClicked"/>

            <Label x:Name="resultLabelHeader" Font="Bold,24"/>
            <Label x:Name="resultLabel" Font="Bold,20"/>
        </StackLayout>
    </ScrollView>

</ContentPage>